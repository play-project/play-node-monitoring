#!/usr/bin/env node

var util = require('util');

var argv = require('optimist')
  .usage('Usage: $0 -c [config path]')
  .alias('c', 'config')
  .default('c', './config.json')
  .demand(['c'])
  .argv;

var config = require('../lib/util/config');
var Monitoring = require('../lib/monitoring').Monitoring

try {
  config = config.loadConfig(argv.c);
}
catch (err) {
  console.log('Failed to load configuration file ', err);
  process.exit(1);
}

console.log('Using config ', config);

var m = new Monitoring(config);
m.start(function(err) {
  if (err) {
    process.exit(1);
  } else {
    util.log('Monitoring is started!');    
  }
});
